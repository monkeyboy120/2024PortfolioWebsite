---
import SectionReveal from './SectionReveal.svelte';

const contactLinks = [
  {
    label: 'GitHub',
    detail: 'github.com/monkeyboy120',
    href: 'https://github.com/monkeyboy120',
  },
  {
    label: 'LinkedIn',
    detail: 'linkedin.com/in/lajoshua',
    href: 'https://www.linkedin.com/in/lajoshua',
  },
  {
    label: 'Email',
    detail: 'lajoshua@umich.edu',
    href: 'mailto:lajoshua@umich.edu',
  },
];
---

<section id="contact" class="section-space px-4 pb-20 sm:px-6">
  <div class="page-shell">
    <SectionReveal client:load>
      <div class="rounded-[2.5rem] border border-line bg-midnight px-6 py-10 text-white shadow-lift sm:px-10 sm:py-14">
        <div class="mx-auto max-w-3xl text-center">
          <p class="eyebrow mb-4 text-accentSoft">Contact</p>
          <h2 class="font-display text-3xl sm:text-5xl">Get in touch.</h2>
          <p class="mt-4 text-sm leading-7 text-slate-300 sm:text-lg sm:leading-8">
            If you are working on software, systems, or robotics, feel free to reach out.
          </p>
        </div>

        <div class="mt-8 grid gap-3 md:mt-10 md:grid-cols-3 md:gap-4">
          {contactLinks.map((item) => (
            <a
              href={item.href}
              target="_blank"
              rel="noopener noreferrer"
              class="rounded-3xl border border-white/10 bg-white/5 p-4 text-left transition hover:-translate-y-1 hover:border-accentSoft/60 hover:bg-white/10 sm:p-5"
            >
              <p class="text-sm uppercase tracking-[0.18em] text-accentSoft">{item.label}</p>
              <p class="mt-2 text-base font-semibold text-white sm:mt-3 sm:text-lg">{item.detail}</p>
              <p class="mt-3 text-sm text-slate-300">Open</p>
            </a>
          ))}
        </div>
      </div>
    </SectionReveal>
  </div>
</section>
